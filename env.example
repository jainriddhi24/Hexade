# Database
DATABASE_URL="postgresql://username:password@localhost:5432/hexade_portal?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# AWS S3 Configuration
S3_BUCKET="hexade-documents"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-aws-access-key"
S3_SECRET_ACCESS_KEY="your-aws-secret-key"

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@hexade.com"
EMAIL_FROM_NAME="Hexade Portal"

# Alternative Email Configuration (SMTP)
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT="587"
EMAIL_SMTP_USER="your-email@gmail.com"
EMAIL_SMTP_PASS="your-app-password"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# AI Provider Configuration
AI_PROVIDER="openai" # or "mock" for development
OPENAI_API_KEY="your-openai-api-key"

# Redis Configuration (for background jobs)
REDIS_URL="redis://localhost:6379"

# WebRTC Configuration
NEXT_PUBLIC_WEBRTC_STUN_SERVERS="stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302"

# Feature Flags
ENABLE_ADMIN="false" # Set to "true" to enable admin features
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_SMS_NOTIFICATIONS="false"

# Development
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID="your-google-analytics-id"

# File Upload Limits
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png"

# Security
BCRYPT_ROUNDS="12"
RATE_LIMIT_MAX="100" # requests per window
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds
